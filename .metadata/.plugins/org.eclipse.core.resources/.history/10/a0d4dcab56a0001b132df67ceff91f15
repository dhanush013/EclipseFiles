public class ApplicationUtil {


	public static List<String> readFile(String inputfeed) throws PostalDeptMgmtException {
		List <String> nscHolderList = new ArrayList <String> ();
		
		// TYPE YOUR CODE HERE
		try {
			   BufferedReader br=new BufferedReader(new FileReader(inputfeed));
			   String s=br.readLine();
			   while(s!=null)
			   {
			    String s1[]=s.split(",");
			    Date doi=stringToDateConverter(s1[7]);
			    if(checkIfMaturesThisMonth(doi))
			    nscHolderList.add(s);
			    s=br.readLine();
			   }
			  } catch (FileNotFoundException e) {
			   // TODO Auto-generated catch block
			   e.printStackTrace();
			  }catch (IOException e) {
			   // TODO Auto-generated catch block
			   e.printStackTrace();
			  }

		return nscHolderList;
	}
