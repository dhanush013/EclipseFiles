<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
        
	<bean id="datasource1" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
		<property name="url" value="jdbc:mysql://localhost:3306/dbaj06" ></property>
		<property name="username" value="root"></property>
    	<property name="password" value="mysql"></property>
		<property name="driverClassName" value="com.mysql.jdbc.Driver" ></property>
	</bean>
	
	<bean id="datasource2" class="org.springframework.jdbc.core.JdbcTemplate" >
		<property name="data source" ref="datasource1"></property>
	</bean>
	
	<bean id="datasource3" class="cts.com.dao.CustomerDao" >
		
	</bean>
	     
</beans>